# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# SCSS files
[*.{scss,css}]
indent_style = space
indent_size = 2
max_line_length = 100
insert_final_newline = true

# JavaScript files (if you add interactivity)
[*.js]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# JSON files (e.g. cspell.json, package.json)
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
